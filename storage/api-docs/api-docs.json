                "description": "This endpoint returns the Google OAuth authorization URL that the frontend can use to redirect users for Google Sign-In.",
                "operationId": "redirectToGoogle",
                "responses": {
                    "200": {
                        "description": "Successfully generated Google OAuth redirect URL",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "description": "Status of the request",
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "url": {
                                            "description": "Google OAuth authorization URL",
                                            "type": "string",
                                            "example": "https://accounts.google.com/o/oauth2/auth?client_id=YOUR_CLIENT_ID&redirect_uri=http://127.0.0.1:8000/api/auth/google/callback&scope=email+profile&response_type=code&state=random_string"
                                        }
                                    },
                                    "type": "object"
                                }
